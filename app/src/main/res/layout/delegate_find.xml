<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_ordinary"
    tools:layout_editor_absoluteY="81dp">
   <LinearLayout
       android:layout_width="match_parent"
       android:paddingTop="@dimen/h10"
       android:layout_height="@dimen/h60">
      <TextView
          android:textColor="@color/white"
          android:layout_width="match_parent"
          android:text="@string/news"
          android:textSize="@dimen/p18"
          android:gravity="center"
          android:layout_height="match_parent" />
   </LinearLayout>
<LinearLayout
    android:layout_margin="@dimen/h_distance_20"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <android.support.v7.widget.AppCompatImageView
       android:layout_width="wrap_content"
       android:src="@drawable/news_empty"
       android:layout_height="wrap_content" />
   <TextView
       android:layout_marginTop="@dimen/h_distance"
       android:layout_width="match_parent"
       android:text="@string/find_no"
       android:textSize="@dimen/p16"
       android:gravity="center"
       android:textColor="@color/_9"
       android:layout_height="wrap_content" />
</LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>