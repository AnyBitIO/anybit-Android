<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_bg"
    android:paddingTop="@dimen/h_distance_20"
    android:orientation="vertical">

    <include layout="@layout/icon_layout" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/h50"
        android:layout_marginLeft="@dimen/h10"
        android:layout_marginRight="@dimen/h10"
        android:layout_marginTop="@dimen/h16"
        android:background="@color/gray_half"
        android:orientation="vertical"
        android:padding="@dimen/h10">

        <android.support.v7.widget.AppCompatTextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/h10"
            android:gravity="left"
            android:text="@string/word_copy"
            android:textColor="@color/common_color"
            android:textSize="18sp" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/seed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/h10"
            android:background="@drawable/bg"
            android:gravity="left"
            android:minLines="6"
            android:padding="@dimen/h10"
            android:textSize="@dimen/p20" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/restore_message"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/h10"
            android:layout_marginRight="@dimen/h_distance_20"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_red"
            android:drawableLeft="@drawable/ic_error"
            android:drawablePadding="@dimen/h6"
            android:padding="@dimen/h2"
            android:text="@string/send_safe"
            android:textColor="@color/white"
            android:textSize="10sp"
             />
        <!-- <android.support.v7.widget.AppCompatTextView
             android:layout_width="wrap_content"
             android:id="@+id/seed_new"
             android:layout_height="wrap_content"
             android:layout_margin="@dimen/h10"
             android:textSize="10sp"
             android:layout_gravity="right"
             android:text="@string/word_new" />-->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/seed_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/h30"
            android:background="@drawable/bg_blue"
            android:paddingLeft="@dimen/h10"
            android:paddingRight="@dimen/h10"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/p18" />
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>