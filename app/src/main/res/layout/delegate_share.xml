<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/h_distance_side"
        android:background="@drawable/bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="214dp"
            android:scaleType="fitXY"
            android:src="@drawable/download"
            android:layout_height="212dp"
            android:layout_marginTop="@dimen/h80" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h30"
            android:text="@string/setting_download"
            android:textColor="@color/color_232323" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/copy"
            android:layout_width="@dimen/h120"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/h30"
            android:background="@drawable/bg"
            android:gravity="center"
            android:text="@string/copy_address"
            android:textSize="16sp" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>